---
import Layout from "../../layouts/Layout.astro";
import DonationCard from "../../components/DonationCard.astro";
import RamadanTable from "../../components/RamadanTable.astro";
import { SEO } from "astro-seo";
const title = "Ramadan Appeal 2025| Donate to Provide Food Pack & Iftar Box";
const description =
  "Join CRF Ramadan appeal to provide Food Pack & Iftar boxes to Support needy families through our charity. Donate Now to make a positive impact!";
const pageImage = "";
const keywords =
  "ramadan 2025 ,  ramadan donation, ramadan appeal, ramadan charity, donate in ramadan";

---
<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage? pageImage : "/assets/images/logo/Logo-CRF.png"}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage ? pageImage : "/assets/images/logo/Logo-CRF.png"}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Layout>
  <style>
    .breadcrumb-bg::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("/assets/images/breadcrumb/about-bg.png");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: 100% 100%;
      opacity: 1;
      -webkit-transition: opacity 0.3s ease;
      transition: opacity 0.3s ease;
      z-index: -1;
    }
  </style>
  <section class="breadcrumb-section breadcrumb-bg">
    <div class="container">
      <div class="breadcrumb-text">
        <nav
          aria-label="breadcrumb"
          class="breadcrumb-nav wow fadeInUp"
          data-wow-delay="0.0s"
        >
          <ul class="breadcrumb listing">
            <li class="breadcrumb-item single-list">
              <a href="/" class="single">Home</a>
            </li>
            <!-- <li class="breadcrumb-item single-list" aria-current="page">
              <a href="/ramadan" class="single">Appeals</a>
            </li> -->
            <li class="breadcrumb-item single-list" aria-current="page">
              <a href="/ramadan" class="single">Ramadan </a>
            </li>
          </ul>
        </nav>
        <h1 class="title wow fadeInUp" data-wow-delay="0.1s">Ramadan</h1>
      </div>
    </div>
  </section>
  <div
    class="section-tittle mb-50 container shadow-lg p-5"

    style="text-align: center; margin-top: 100px;"
  >
    <div class="container no-top">
      <div class="row justify-content-center">
    

        <!-- Left column vertically centered -->
        <div
          class="col-md-6 d-flex align-items-center justify-content-center text-center"
        >
          <p
            class="lead"
            style="font-size: 40px; font-weight: 700; color: black;"
          >
          The Spirit of Giving in <br> Ramadan 2025
        </p>
        </div>

        <!-- Right column -->
        <div class="col-md-6 text-justify">
          <p class="lead">
            Ramadan in the year of 2025 is a time of reflection, devotion, and <br> generosity. It is a sacred & the purest month of the year when Muslims around the world come together to strengthen their faith and support those in need. Giving in Ramadan is an essential part of our spiritual journey, as it brings blessings to the giver and hope to the receiver.

          </p>
        </div>
      </div>
    </div>
  </div>

  <DonationCard programId={[11, 12, 13]} />
  <section class="">
    <div class="container mt-5">
      <div class="container">
        <div class="row justify-content-between align-items-center" >
          <!-- First Div: Image -->
          <div class="col-12 col-md-6 mb-4 mb-md-0" style="padding-left: 20px;">
            <img
              src="/assets/images/appeals/sadaqah-4.jpg"
              alt="Rounded Image"
              class="img-fluid rounded"
            />
          </div>
