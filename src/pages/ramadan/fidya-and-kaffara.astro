---
import Breadcrumb from "../../components/Breadcrumb.astro";
import DonationCard from "../../components/DonationCard.astro";
import Layout from "../../layouts/Layout.astro";
import { SEO } from "astro-seo";
const title = "Fidya and Kaffara | Pay Fidya and Kaffara | CRF";
const description =
  "Pay Fidya and Kaffara with Care and Relief Foundation. Your donations help feed the hungry and provide relief to those in need. Donate now!";
const keywords =
  "Fidya and Kaffarah,what is fidya in islam, pay fidya, pay kaffarah, kaffarah for breaking fast";
  const pageImage="";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage? pageImage : "/assets/images/logo/Logo-CRF.png"}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage ? pageImage : "/assets/images/logo/Logo-CRF.png"}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
