---
import Breadcrumb from "../../components/Breadcrumb.astro";
import DonationCard from "../../components/DonationCard.astro";
import Layout from "../../layouts/Layout.astro";
import { SEO } from "astro-seo";
const title = "Pay Fitrana & Sponser Eid Gift for Needy Child | CRF";
const description =
  "Share happinies this EID by donating Fitrana and Eid gifts through Care & Relief Foundation. Your Zakat-ul-Fitr brings hope to those need.";
const keywords =
  "zakat ul fitr, what is fitrana,fitrana donation,eid gifts,how much is fitrana 2025";
const pageImage = "";
---

<SEO
  title={title}
  description={description}
  canonical=""
  openGraph={{
    basic: {
      title: `${title}`,
      type: "website",
      image: `${pageImage? pageImage : "/assets/images/logo/Logo-CRF.png"}`,
    },
    optional: {
      description: `${description}`,
    },
  }}
  twitter={{
    creator: "@jonasmerlins1",
  }}
  extend={{
    // extending the default link tags
    link: [{ rel: "icon", href: "/favicon.png" }],
    // extending the default meta tags
    meta: [
      {
        name: "twitter:image",
        content: `${pageImage ? pageImage : "/assets/images/logo/Logo-CRF.png"}`,
      },
      {
        name: "twitter:title",
        content: `${title}`,
      },
      {
        name: "twitter:description",
        content: `${description}`,
      },
      { name: "keywords", content: `${keywords}` },
    ],
  }}
/>
<Layout>
  <main>
