---
import Layout from "../../layouts/Layout.astro";

---
<Layout>
    <main>
        <style>
          .breadcrumb-bg::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/assets/images/appeals/sadaqah-5.png");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 100% 100%;
    opacity: 1;
    -webkit-transition: opacity 0.3s ease;
    transition: opacity 0.3s ease;
    z-index: -1;
    }
        </style>
        <!-- Breadcrumb Area S t a r t -->
        <section class="breadcrumb-section breadcrumb-bg">
          <div class="container">
            <div class="breadcrumb-text">
              <nav
                aria-label="breadcrumb"
                class="breadcrumb-nav wow fadeInUp"
                data-wow-delay="0.0s"
              >
                <ul class="breadcrumb listing">
                  <li class="breadcrumb-item single-list">
                    <a href="/" class="single">Home</a>
                  </li>
                  <li class="breadcrumb-item single-list" aria-current="page">
                    <a href="/blogs" class="single">Appeals </a>
                  </li>
                </ul>
              </nav>
              <h1 class="title wow fadeInUp" data-wow-delay="0.1s">Our Appeals</h1>
            </div>
          </div>
        </section>
        <!-- End-of Breadcrumb Area -->
    
        <!-- Blog S t a r t -->
        
        <section class="blog-section-three top-bottom-padding">
          <div class="row justify-content-center">
            <div class="col-xl-7">
              <!-- Section Tittle -->
              <div class="section-tittle text-center mb-50">
                <span class="sub-tittle text-capitalize font-600">Appeals</span>
                <h2 class="title font-700">Our Appeals & Programs</h2>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row gy-24 ">
            
                  <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper appeal-single ">
                    <div class="single-blog h-calc">
                      <div class="blog-img">
                        <a href="/appeals/sadaqah">
                          <img
                            src="/assets/images/appeals/sadaqah-5.png"
                            class="img-fluid w-100"
                            alt="img"
                          />
                        </a>
                      </div>
                      <div class="blog-info">

                        <div class="d-flex justify-content-between align-items-center">
                          <div class="blog-info-title">
                           
                            <h4 class="title text-capitalize text-center">
                              <a href="/appeals/sadaqah">Sadaqah Appeal</a>
                            </h4>
                            <p class="subtitle text-center">Sadqah, a voluntary charitable giving in Islam, plays a crucial role in alleviating poverty and hardship. By contributing to Sadqah, donors fulfill a spiritual obligation.</p>
                          </div>
                        </div>
                      </div>
                      <div class="button-section text-center">
                        <a href="/appeals/sadaqah" class="read-btn">
                          Read More
                        </a>
                      </div>
                    </div>
                  </div>                 
                  <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper appeal-single">
                    <div class="single-blog h-calc">
                      <div class="blog-img">
                        <a href="/appeals/zakat">
                          <img
                            src="/assets/images/appeals/zakat-1.jpg"
                            class="img-fluid w-100"
                            alt="img"
                          />
                        </a>
                      </div>
                      <div class="blog-info">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="blog-info-title">
                           
                            <h4 class="title text-capitalize text-center">
                              <a href="/appeals/zakat">Zakat Appeal</a>
                            </h4>
                            <p class="subtitle text-center">Zakat, the third pillar of Islam, is a mandatory act of worship for all eligible Muslims, signifying their duty to purify their wealth by helping those in need.
                            </p>
                          </div>
                        </div>
                      </div>
                      <div class="button-section text-center">
                        <a href="/appeals/zakat" class="read-btn">
                          Read More
                        </a>
                      </div>
                    </div>
                  </div>
                  <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper appeal-single">
                    <div class="single-blog h-calc">
                      <div class="blog-img">
                        <a href="/appeals/water">
                          <img
                            src="/assets/images/appeals/water-5.png"
                            class="img-fluid w-100"
                            alt="img"
                          />
                        </a>
                      </div>
                      <div class="blog-info">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="blog-info-title">
                           
                            <h4 class="title text-capitalize text-center">
                              <a href="/appeals/water">Water Appeal</a>
                            </h4>
                            <p class="subtitle text-center">Water is the essence of life, yet millions around the world struggle to access this basic necessity and a lot of needy people are loosing their lives everyday.
                            </p>
                          </div>
                        </div>
                      </div>
                      <div class="button-section text-center">
                        <a href="/appeals/water" class="read-btn">
                          Read More
                        </a>
                      </div>
                    </div>
                  </div>
               <div style="padding-bottom: 30px;"></div>
                  <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper appeal-single">
                    <div class="single-blog h-calc">
                      <div class="blog-img">
                        <a href="/appeals/build-a-masjid">
                          <img
                            src="/assets/images/appeals/masjid-5.png"
                            class="img-fluid w-100"
                            alt="img"
                          />
                        </a>
                      </div>
                      <div class="blog-info">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="blog-info-title">
                           
                            <h4 class="title text-capitalize text-center">
                              <a href="/appeals/build-a-masjid">Build A Masjid</a>
                            </h4>
                            <p class="subtitle text-center">This CRF Build A Masjid project not only provides a place of worship, but it also strengthens entire communities through providing space for islamic education.

                            </p>
                          </div>
                        </div>
                      </div>
                      <div class="button-section text-center">
                        <a href="/appeals/build-a-masjid" class="read-btn">
                          Read More
                        </a>
                      </div>
                    </div>
                  </div>    
                   <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper appeal-single">
                    <div class="single-blog h-calc">
                      <div class="blog-img">
                        <a href="/appeals/livelihood">
                          <img
                            src="/assets/images/appeals/livelihood-5.png"
                            class="img-fluid w-100"
                            alt="img"
                          />
                        </a>
                      </div>
                      <div class="blog-info">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="blog-info-title">
                           
                            <h4 class="title text-capitalize text-center">
                              <a href="/appeals/livelihood">Livelihood Appeal</a>
                            </h4>
                            <p class="subtitle text-center">Sustainable livelihoods play an essential role in strengthening communities and building long-term resilience. By equipping individuals with opportunities for providing.
                          </div>
                        </div>
                      </div>
                      <div class="button-section text-center">
                        <a href="/appeals/livelihood" class="read-btn">
                          Read More
                        </a>
                      </div>
                    </div>
                  </div>     
                  <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper appeal-single">
                    <div class="single-blog h-calc">
                      <div class="blog-img">
                        <a href="/appeals/gaza">
                          <img
                            src="/assets/images/appeals/gaza-1.jpg"
                            class="img-fluid w-100"
                            alt="img"
                          />
                        </a>
                      </div>
                      <div class="blog-info">
                        <div class="d-flex justify-content-between align-items-center">
                          <div class="blog-info-title">
                           
                            <h4 class="title text-capitalize text-center">
                              <a href="/appeals/gaza">Gaza Emergency Appeal</a>
                            </h4>
                            <p class="subtitle text-center">The Gaza Strip, a densely populated Palestinian territory, has been facing an ongoing humanitarian emergency due to a combination of factors.
                            </p>
                          </div>
                        </div>
                      </div>
                      <div class="button-section text-center">
                        <a href="/appeals/gaza" class="read-btn">
                          Read More
                        </a>
                      </div>
                    </div>
                  </div>
            </div>
          
          </div>
        </section>
        <!-- End-of Blog -->
      </main>
</Layout>